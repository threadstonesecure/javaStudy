<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo  http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="hs-hdp" />

    <dubbo:provider threads="${dubbo.server.threads}"  threadpool="fixed" retries="0" queues="100"/>

	<dubbo:consumer check="false" />

	<dubbo:registry address="${dubbo.registry.address}"
		file="${dubbo.cache.file}" />

    <dubbo:registry address="${dubbo.registry.address2}"
                    file="${dubbo.cache.file}" />

	<dubbo:registry address="${dubbo.registry.address3}"
					file="${dubbo.cache.file}" />

	<dubbo:protocol name="${dubbo.protocol.name}" port="${dubbo.protocol.port}"
		accesslog="${dubbo.protocol.accesslog}" />

	<dubbo:service interface="com.yuntai.hdp.access.service.DowndataHandler" timeout="60000"
		ref="downdataHandler" />

    <dubbo:service interface="com.yuntai.hdp.access.service.AccessHospitalHandler"
                   ref="accessHospitalHandler" timeout="60000"   />

	<!-- 增加group配置是为hdp集群服务 ，对接方法需要配置 ，需要同时发布 -->
	<!--
	<dubbo:service interface="com.yuntai.hdp.access.service.DowndataHandler" timeout="60000"
				   ref="downdataHandler" group="${hdp.server.name}" />

	<dubbo:service interface="com.yuntai.hdp.access.service.AccessHospitalHandler"
				   ref="accessHospitalHandler" timeout="60000" group="${hdp.server.name}"  />
	-->
</beans>