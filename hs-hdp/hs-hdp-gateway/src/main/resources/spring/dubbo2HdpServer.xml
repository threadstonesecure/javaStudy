<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo  http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <dubbo:registry id="hdpServerReg" address="${hdpserver.dubbo.registry.address}" group="hdpServer"/>

    <dubbo:consumer check="false" registry="hdpServerReg" scope="remote"/>

    <!-- hdpServer 集群配置方式 -->
    <dubbo:reference id="dubbo.HdpServer.AccessHospitalHandler" interface="com.yuntai.hdp.access.service.AccessHospitalHandler"
                     timeout="60000" merger="HdpOneResultPack" registry="hdpServerReg" group="*">
    </dubbo:reference>

    <dubbo:reference id="dubbo.HdpServer.DowndataHandler" interface="com.yuntai.hdp.access.service.DowndataHandler"
                     timeout="60000" merger="HdpOneBoolean" registry="hdpServerReg" group="*"/>

</beans>