<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo  http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="hs-hdp-gateway"/>

    <dubbo:provider threads="${gateway.dubbo.server.threads}" threadpool="fixed" retries="0" queues="100"/>

    <dubbo:registry id="registry1" address="${gateway.dubbo.registry.address}"
                    file="${gateway.dubbo.cache.file}"/>

    <dubbo:registry id="registry2" address="${gateway.dubbo.registry.address2}"
                    file="${gateway.dubbo.cache.file}"/>

    <dubbo:registry id="registry3" address="${gateway.dubbo.registry.address3}"
                    file="${gateway.dubbo.cache.file}"/>

    <dubbo:protocol name="${gateway.dubbo.protocol.name}" port="${gateway.dubbo.protocol.port:-1}"
                    accesslog="${gateway.dubbo.protocol.accesslog}"/>

    <dubbo:service interface="com.yuntai.hdp.access.service.DowndataHandler" timeout="60000"
                   ref="downdataHandler" registry="registry1,registry2,registry3"/>

    <dubbo:service interface="com.yuntai.hdp.access.service.AccessHospitalHandler"
                   ref="accessHospitalHandler" timeout="60000" registry="registry1,registry2,registry3"/>

</beans>