<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo  http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo_demo"/>
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry id="multicast" address="multicast://224.5.6.7:1234"/>

    <dubbo:provider filter="default,traceFilter"/>
    <dubbo:protocol name="dubbo" port="20881"/>
    <dubbo:service interface="dlt.domain.model.service.UserService"
                   ref="userServiceImpl" cluster="failsafe" loadbalance="random"/>

    <bean id="userServiceImpl" class="dlt.domain.module.service.impl.UserServiceImpl">
        <property name="uService" ref="userService" />
    </bean>

    <dubbo:consumer filter="default,traceFilter" />

    <dubbo:reference id="userService"
                     interface="dlt.domain.model.service.UService"/>


</beans>